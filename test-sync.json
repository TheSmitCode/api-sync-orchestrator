{
  "sources": [
    {
      "api": "stripe",
      "endpoint": "https://api.stripe.com/v1/invoices",
      "auth_token": "STRIPE_API_KEY",
      "params": {"limit": 2}
    }
  ],
  "transform": {
    "add_field": {"timestamp": "{{ now() }}"}
  },
  "target": {
    "type": "airtable",
    "base_id": "appXXXX",
    "table": "Invoices",
    "api_key": "AIRTABLE_API_KEY"
  },
  "schedule": "*/5 * * * *",
  "retries": 3
}
